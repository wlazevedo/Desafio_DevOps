{
  "title": "Whoami - Dashboard",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (millicores)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"devops-challenge\", pod=~\"whoami.*\"}[2m])) * 1000"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{namespace=\"devops-challenge\", pod=~\"whoami.*\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Pods Running",
      "targets": [
        {
          "expr": "count(kube_pod_status_ready{namespace=\"devops-challenge\", condition=\"true\", pod=~\"whoami.*\"})"
        }
      ]
    }
  ],
  "schemaVersion": 36
}
